<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="" />
    <title>PolarOS Wallpapers</title>
  </head>
  <body>
    <header>
      <a href="/">
        <img src="" alt="PolarOS Logo" width="40px" height="40px"/>
      </a>
    </header>
    <h1>This page is currently under development</h1>
    <p>
      Try again later to check if it's finished. Meanwhile, you can take a look
      on our main website <a href="https://polaros.xyz">here</a>
    </p>
  </body>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap");

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Inter", sans-serif;
    }

    body {
      width: 100%;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      text-align: center;
    }

    header {
      width: 100%;
      position: absolute;
      top: 0;
      display: flex;
      padding: 20px 30px;
      justify-content: space-between;
    }

    header img {
      opacity: 0.6;
      transition: 0.3s opacity;
    }

    img:hover {
      opacity: 0.8;
    }

    header a:nth-child(2) {
      text-decoration: none;
      background-color: rgba(0, 0, 0, 0.5);
      font-weight: 600;
      padding: 10px 25px;
      color: white;
      border-radius: 25px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s background-color;
    }

    header a:nth-child(2):hover {
      background-color: rgba(0, 0, 0, 0.75);
    }

    h1 {
      font-size: 3em;
      opacity: 0.6;
      margin-bottom: 20px;
    }

    p {
      font-size: 1.2em;
      opacity: 0.5;
      margin-bottom: 50px;
    }

    a {
      color: black;
    }

    @media (max-width: 600px) {
      body {
        padding: 20px;
      }

      header {
        padding: 10px 20px;
      }

      header a:nth-child(2) {
        font-size: 14px;
        padding: 5px 20px;
      }

      h1 {
        font-size: 2em;
      }

      p,
      a {
        font-size: 1em;
      }
    }

    @media (prefers-color-scheme: dark) {
      body {
        background-color: #121212;
      }
      div {
        background: url(../img/logo-light.png);
      }
      header a:nth-child(2) {
        background: rgba(255, 255, 255, 0.2);
      }
      header a:nth-child(2):hover {
        background: rgba(255, 255, 255, 0.3);
      }
      h1,
      p,
      a {
        color: white;
      }
      h1 {
        opacity: 0.8;
      }
      a.beta {
        background: #1b7677;
      }
      a.beta:hover {
        background: #1f8f91;
      }
    }
  </style>
  <script>
    const userPrefersDark =
      window.matchMedia &&
      window.matchMedia("(prefers-color-scheme: dark)").matches;
    const userPrefersLight =
      window.matchMedia &&
      window.matchMedia("(prefers-color-scheme: light)").matches;
    const link = document.querySelector("link[rel~='icon']");
    const logo = document.querySelector("img");

    if (userPrefersDark) {
      link.href = "../img/logo-light.png";
      logo.src = "../img/logo-light.png";
    } else if (userPrefersLight) {
      link.href = "../img/logo-dark.png";
      logo.src = "../img/logo-dark.png";
    }
  </script>
  
</html>
